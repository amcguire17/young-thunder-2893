<h1><%= @movie.title %></h1>
<h3>Made: <%= @movie.creation_year %></h3>
<h3>Genre: <%= @movie.genre %></h3>

<% @actors.each do |actor|  %>
  <p id="actor-<%= actor.id %>"><%= actor.name %></p>
<% end %>

<h4>Actors Average Age: <%= @actors.average_age %></h4>

<%= form_with url: "/movies/#{@movie.id}/actors/new", method: :post, local: true do |f| %>
  <%= f.label :actor %>
  <%= f.text_field :actor %>
  <%= f.submit 'Add Actor to Movie' %>
<% end %>
